# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

disk_config disk1

primary /boot	200	ext2	rw,noatime
primary -       4G-	-       -

disk_config lvm

vg lvg  disk1.2
lvg-root     /       3G-15G   ext4    noatime,rw
lvg-swap     swap    200-4G   swap    sw
lvg-home     /home   600-     ext4    noatime,nosuid,nodev,rw
